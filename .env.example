# ========================================
# Educa com Talento - Environment Variables
# ========================================
# IMPORTANTE: Copie este arquivo para .env e preencha os valores

# ========================================
# Website (Next.js)
# ========================================
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://educacomtalento.com.br

# ========================================
# Moodle LMS
# ========================================
MOODLE_DB_HOST=mariadb
MOODLE_DB_NAME=moodle
MOODLE_DB_USER=moodle
MOODLE_DB_PASSWORD=CHANGE_ME_MOODLE_DB_PASS

# Moodle Admin
MOODLE_ADMIN=admin
MOODLE_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASS
MOODLE_ADMIN_EMAIL=admin@educacomtalento.com.br

# Moodle Site
MOODLE_URL=https://cursos.educacomtalento.com.br
MOODLE_SITENAME=Educa Com Talento - Cursos Online
MOODLE_LANGUAGE=pt_br

# ========================================
# MariaDB Database
# ========================================
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASS
MYSQL_DATABASE=moodle
MYSQL_USER=moodle
MYSQL_PASSWORD=CHANGE_ME_MOODLE_DB_PASS

# ========================================
# Email (SMTP) - Para notificações
# ========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@educacomtalento.com.br
SMTP_PASSWORD=CHANGE_ME_SMTP_PASS
SMTP_FROM=noreply@educacomtalento.com.br
